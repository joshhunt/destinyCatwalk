$iconSize = 3.125em;
$substituteColour = #494A4C

.root
  content: 'hello'
  display: flex
  color: inherit
  text-decoration: none
  position: relative
  z-index: 2

  > *
    position: relative
    z-index: 2

  &:before
    content: ''
    position: absolute
    top: -1px
    left: -1px
    bottom: -1px
    right: -1px
    background: rgba(#FAFAFA, 0)
    border-radius: 2px

.reversed
  flex-direction: row-reverse
  text-align: right

.collected
  composes: root
  color: #090B0E

  &:before
    background: #FAFAFA

  .icon
    background: #090B0E
    border-radius: 2px

.accessory
  margin-right: 10px

  .reversed &
    margin-right: 0
    margin-left: 10px


.icon
  height: $iconSize
  display: block

.substituteIcon
  height: $iconSize
  width: $iconSize
  display: flex
  align-items: center
  justify-content: center
  border: 2px solid $substituteColour
  color: lighten($substituteColour , 50%)
  font-size: 20px

.main
  margin-top: -3px

.main
.main > *
  white-space: nowrap
  overflow: auto
  text-overflow: ellipsis
  margin-bottom: 4px

.itemType
.itemMod
  opacity: .9
  font-size: .8em

.itemModIcon
  display: inline-block
  height: 1em
