:global {
  .header {
    background: #111e24;
    color: white;
    padding-bottom: 130px;
    margin-bottom: -86px;
  }

  .headerContent {
    max-width: 1200px;
    padding: 0 15px;
    margin: auto;
  }

  .headerMain {
    display: flex;
    flex: 1;
  }

  .headerTop {
    font-size: 22px;
    line-height: 1.2;
    padding-top: 20px;
    display: flex;
    align-items: center;
    flex-wrap: wrap;
  }

  .siteName {
    margin: 0;
    display: inline-block;
    font-size: inherit;
    font-weight: 600;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    color: #737e82;

    border-right: 1px solid #9ca4a7;
    padding-right: 15px;
  }

  .siteName span {
    color: #a6aeb0;
  }

  .headerIcon {
    color: #a6aeb0;
    margin-right: 0.5em;
  }

  .headerPlatform {
    display: flex;
    align-items: center;
    transition: 150ms ease-in-out all;
    cursor: pointer;
    padding: 5px;
    border-radius: 3px;
    position: relative;
  }

  .headerPlatform:hover {
    background: rgba(255, 255, 255, 0.05);
  }

  .headerPlatformIcon {
    width: 25px;
    text-align: center;
  }

  .headerPlatformDropdown {
    font-size: 10px;
    padding-left: 10px;
  }

  .headerPlatformSelect {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    height: 100%;
    width: 100%;
    opacity: 0;
    font-size: 16px;
  }

  .suggestPlatformIcon {
    min-width: 30px;
    text-align: center;
    display: inline-block;
  }

  @media screen and (max-width: 679px) {
    .headerLogoish {
      flex: 1 0 100%;
      text-align: center;
      margin-bottom: 15px;
    }

    .siteName {
      border: none;
    }

    .headerMain {
      flex: 1 0 100%;
    }

    .headerPlatform {
      margin: 0;
      padding: 0;
      margin-right: 15px;
    }
  }

}




.headerInput {
  background: transparent;
  font-size: inherit;
  border: none;
  font-family: inherit;
  line-height: inherit;
  color: inherit;
  outline: none !important;
  padding: 5px;
  transition: 150ms ease-in-out all;

  border-radius: 3px;
  padding-left: 5px;
  width: 100%;
}

.headerInputContainer {
  width: 100%;
  border-bottom: 1px solid #dadada;
  margin: -5px 0;
  position: relative;
}

.headerInput:hover,
.headerInput:focus {
  background: rgba(255, 255, 255, 0.03);
}

.headerSuggestions {
  position: absolute;
  top: calc(100% - 1px);
  left: 0;
  right: 0;
  z-index: 10;
  background: #F5f5f5;
  border-radius: 0 0 3px 3px;
}

.headerSuggestions ul {
  font-size: 16px;
  padding: 10px;
  margin: 0;
}

.headerSuggestions li {
  list-style: none;
  margin: 0;
  padding: 0;
  color: rgba(black, .75);
  padding: 5px;
  cursor: pointer;
}
